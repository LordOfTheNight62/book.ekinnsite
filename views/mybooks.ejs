<main class="container-md py-4">
    <div class="d-flex align-items-center mb-3">
        <a href="/account" class="btn btn-primary d-inline"><i class="bi bi-arrow-left"></i> Geri</a>
        <h3 class="comment-count d-inline m-auto ms-2"><%= "Tüm Kitaplarım (" + (statistics.totalBooks > 0 ? statistics.totalBooks + ' adet)' : 'Kitap Yok)') %></h3>
    </div>
    <div class="container-fluid my-1 alert-deleted d-none">
        <div class="alert alert-success" role="alert">
            Yorumunuz başarıyla silindi
        </div>
    </div>
    <div class="my-comments-field my-3">
        <% if(books.length > 0) { %>
            <% books.forEach(book => { %>
                <div class="card my-1 w-100">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-8 col-sm-7 col-md-6 text-start">
                                <div class="row">
                                    <div class="col-12"><strong>Kitap Adı: </strong><%= book.name %></div>
                                </div>
                                <div class="row">
                                    <div class="col-12"><strong>Yazar: </strong><%= book.author %></div>
                                </div>
                                <div class="row">
                                    <div class="col-12"><strong>Fiyat: </strong><%= book.price + " TL" %></div>
                                </div>
                                <div class="row">
                                    <div class="col-12"><strong>Eklediğim Tarih: </strong><%= new Date(book.added_at + " UTC").toLocaleString('tr-TR', { day: 'numeric', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit', timeZone: 'Asia/Istanbul' }) %></div>
                                </div>
                            </div>
                            <div class="col-4 col-sm-5 col-md-6 d-flex justify-content-end align-items-center">
                                <div class="row d-flex flex-column flex-sm-row justify-content-end align-items-center g-1">
                                    <div class="col">
                                        <a href="/books/<%= book.id %>" class="btn bg-success"><i class="bi bi-box-arrow-right text-light"></i></a>
                                    </div>
                                    <div class="col">
                                        <a href="/books/edit-book/<%= book.id %>" class="btn bg-warning"><i class="bi bi-pencil-square"></i></a>
                                    </div>
                                    <div class="col">
                                        <a href="/books/delete-book/<%= book.id %>" class="btn bg-danger text-light"><i class="bi bi-trash"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>   
                </div>                   
            <% }); %>
        <% } %>
    </div>
</main>
<script src="/assets/js/bootstrap.bundle.min.js"></script>
