<main class="container-md py-4">
    <div class="d-flex align-items-center mb-3">
        <a href="/account" class="btn btn-primary d-inline"><i class="bi bi-arrow-left"></i> Geri</a>
        <h3 class="comment-count d-inline m-auto ms-2"><%= "Tüm Yorumlarım (" + (statistics.totalComments > 0 ? statistics.totalComments + ' adet)' : 'Yorum Yok)') %></h3>
    </div>
    <div class="container-fluid my-1 alert-deleted d-none">
        <div class="alert alert-success" role="alert">
            Yorumunuz başarıyla silindi
        </div>
    </div>
    <div class="my-comments-field my-3">
        <% if(comments.length > 0) { %>
            <% comments.forEach(comment => { %>
                <div class="card my-1 w-100">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-8 col-sm-7 col-md-6 text-start">
                                <div class="row">
                                    <div class="col-12"><h5 class="card-title comment-user-name"><%= comment.name %> <span class="card-subtitle text-muted comment-date">- <%= new Date(comment.created_at + ' UTC').toLocaleString('tr-TR', {day: 'numeric',month: 'long',year: 'numeric',hour: '2-digit',minute: '2-digit',timeZone: 'Asia/Istanbul',}) %></span></h5></div>
                                </div>
                                <div class="row">
                                    <div class="col-12"><p class="card-text comment-text"><%= comment.comment %></p></div>
                                </div>
                            </div>

                            <div class="col-4 col-sm-5 col-md-6 d-flex justify-content-end align-items-center">
                                <div class="row d-flex flex-column flex-sm-row justify-content-end align-items-center g-1">
                                    <div class="col">
                                        <a href="javascript:void(0)" class="delete-comment btn bg-danger text-light" data-comment-id="<%= comment.id %>"><i class="bi bi-trash"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>   
                </div>                   
            <% }); %>
        <% } %>
    </div>
</main>
<script src="/assets/js/bootstrap.bundle.min.js"></script>
<script src="/assets/js/mycomments.js"></script>
