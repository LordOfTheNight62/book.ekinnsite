<body>
    <main class="container-md py-4">
        <% if(query.message === "success") { %>
            <div class="container-fluid">
                <div class="alert alert-success" role="alert">
                    Kitap başarıyla eklendi
                </div>
            </div>
        <% } else if(query.message === "error") { %>
            <div class="container-fluid">
                <div class="alert alert-danger" role="alert">
                    Bir hata oluştu, kitap eklenemedi
                </div>
            </div>
        <% } %>

        <div class="container-fluid my-1">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/admin-panel/books">Kitaplar</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Kitap Ekle</li>
                </ol>
            </nav>
        </div>
        <div class="container-fluid">
            <h1>Yeni Kitap Ekle</h1>

            <form action="/admin-panel/books/add-book" method="POST" class="form-floating my-3">
                <div class="form-floating mb-3">
                    <input type="text" name="name" class="form-control" id="addBookNameInput" placeholder="Enter Book Name" required>
                    <label for="addBookNameInput">Kitap Adı <span class="text-danger">*</span></label>
                </div>

                <div class="form-floating mb-3">
                    <textarea name="description" class="form-control" id="addBookDescInput" placeholder="Enter Book Description"></textarea>
                    <label for="addBookDescInput">Kitap Açıklaması</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" name="author" class="form-control" id="addBookAuthorInput" placeholder="Enter Book Author" required>
                    <label for="addBookAuthorInput">Yazar Adı <span class="text-danger">*</span></label>
                </div>

                <div class="form-floating mb-3">
                    <input type="number" name="categoryID" class="form-control" id="addBookCategoryInput" placeholder="Enter Book Category" required>
                    <label for="addBookCategoryInput">Kategori <span class="text-danger">*</span></label>
                </div>

                <div class="form-floating mb-3">
                    <input type="number" name="price" class="form-control" id="addBookPriceInput" placeholder="Enter Book Price" min="0" step="0.01" required>
                    <label for="addBookPriceInput">Fiyat <span class="text-danger">*</span></label>
                </div>
                <button class="btn bg-primary text-light w-100" type="submit">Kitap Ekle</button>
            </form>
            <div class="row my-2">
                <div class="col">
                    <a href="/admin-panel/books" class="btn bg-primary text-light w-100" role="button">Geri Dön</a>
                </div>
            </div>
        </div>
    </main>
    <a class="btn text-bg-primary position-fixed top-0 end-0 m-1 p-2 rounded-circle d-flex justify-content-center align-items-center" style="width: 2.5em;height: 2.5em;" role="button" href="/admin-panel"><i class="bi bi-person-gear"></i></a>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/error.js"></script>
</body>