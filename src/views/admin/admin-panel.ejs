<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block mb-2 mb-md-0 sidebar bg-dark text-light py-3">
            <div class="d-flex justify-content-center align-items-center mb-3">
                <img class="rounded-circle" src="/assets/img/ekinnsite_logo.png" alt="ekinn.site Logo" style="width: calc(4rem + 6vw);">
            </div>
            <h3 class="text-center">Yönetim Paneli</h3>
            <ul class="nav flex-column mt-4">
                <li class="nav-item">
                    <a class="nav-link active" href="#">
                        <i class="bi bi-house-door"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin-panel/books">
                        <i class="bi bi-book"></i> Kitaplar
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin-panel/categories">
                        <i class="bi bi-ui-checks-grid"></i> Kategoriler
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin-panel/users">
                        <i class="bi bi-people"></i> Üyeler
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin-panel/comments">
                        <i class="bi bi-chat-left-text"></i> Yorumlar
                    </a>
                </li>
                <!-- Servisler Menüsü (Açılır) -->
                <li class="nav-item">
                    <a class="nav-link d-flex justify-content-between" href="#servicesMenu" data-bs-toggle="collapse" aria-expanded="false">
                        <span><i class="bi bi-tools"></i> Servisler </span>
                        <i class="bi bi-caret-down-fill"></i>
                    </a>
                    <ul class="collapse" id="servicesMenu">
                        <li><a class="nav-link" href="https://www.google.com/adsense/new/u/2/pub-9050645484930137/onboarding"><i class="bi bi-google"></i> Google Adsense</a></li>
                        <li><a class="nav-link" href="https://analytics.google.com/analytics/web/?authuser=2#/p470459256/reports/reportinghub?params=_u..nav%3Dmaui"><i class="bi bi-bar-chart-fill"></i> Google Analytics</a></li>
                        <li><a class="nav-link" href="https://search.google.com/u/2/search-console?resource_id=sc-domain%3Abook.ekinn.site"><i class="bi bi-search"></i> Google Search Console</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://book.ekinn.site/sitemap.xml" target="_blank">
                        <i class="bi bi-rss-fill" style="color: #f26522;"></i> Site Haritası
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link link-danger" href="/logout">
                        <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <nav class="navbar bg-dark text-light navbar-expand-lg sticky-top" data-bs-theme="dark">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1">Hoşgeldin, sayın <%= user.name %></span>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminPanelNavBar" aria-controls="adminPanelNavBar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="adminPanelNavBar">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/account"><img class="rounded-circle avatar-img" src="/assets/img/avatars/<%= avatar %>.png" width="36" height="36"> Hesabım</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            
            <div class="row mt-4">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-people-fill"></i> Üyeler</h5>
                            <p class="card-text">Toplam <%= statistics.totalUser %> üye var</p>
                            <a href="/admin-panel/users" class="btn btn-light">Tümünü Görüntüle</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card bg-danger text-white">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-book"></i> Kitaplar</h5>
                            <p class="card-text">Toplam <%= statistics.totalBooks %> kitap var</p>
                            <a href="/admin-panel/books" class="btn btn-light">Tümünü Görüntüle</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card bg-warning">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-chat-left-text"></i> Yorumlar</h5>
                            <p class="card-text">Toplam <%= statistics.totalComments %> yorum var</p>
                            <a href="/admin-panel/comments" class="btn btn-light">Tümünü Görüntüle</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

