<main class="container-md py-4">
    <div class="d-flex align-items-center mb-3">
        <a href="/account" class="btn btn-primary d-inline"><i class="bi bi-arrow-left"></i> Geri</a>
        <h3 class="favorites-count d-inline m-auto ms-2"><%= "Favori Kitaplarım (" + (statistics.totalFavorites > 0 ? statistics.totalFavorites + ' adet)' : 'Kitap Yok)') %></h3>
    </div>
    <div class="container-fluid my-1 alert-deleted d-none">
        <div class="alert alert-success" role="alert">
            Kitap favorilerinizden kaldırıldı
        </div>
    </div>
    <div class="my-favorites-field my-3">
        <% if(books.length > 0) { %>
            <div class="input-group mb-3">
                <div class="form-floating">
                    <input type="text" class="form-control card-search-input" id="searchCommentInput" placeholder="Search comment">
                    <label for="searchCommentInput">Favorilerinde Ara</label>
                </div>
                <button class="btn clear-card-search-btn" type="button" style="background-color: #f0f0f0;"><i class="bi bi-x-lg"></i></button>
            </div>
            <% books.forEach(book => { %>
                <div class="card my-1 w-100">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-8 col-sm-7 col-md-6 text-start">
                                <div class="row">
                                    <div class="col-12"><strong>Kitap Adı: </strong><%= book.name %></div>
                                </div>
                                <div class="row">
                                    <div class="col-12"><strong>Yazar: </strong><%= book.author %></div>
                                </div>
                                <div class="row">
                                    <div class="col-12"><strong>Kategori: </strong><%= book.category_name %></div>
                                </div>
                                <div class="row">
                                    <div class="col-12"><strong>Eklendiği Tarih: </strong><%= new Date(book.added_at + " UTC").toLocaleString('tr-TR', { day: 'numeric', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit', timeZone: 'Asia/Istanbul' }) %></div>
                                </div>
                            </div>
                            <div class="col-4 col-sm-5 col-md-6 d-flex justify-content-end align-items-center">
                                <div class="row d-flex flex-column flex-sm-row justify-content-end align-items-center g-1">
                                    <div class="col">
                                        <a href="/<%= toUrlString(book.author) %>/<%= toUrlString(book.name) %>-b<%= book.id %>" class="btn bg-success" title="Kitabı Görüntüle"><i class="bi bi-box-arrow-right text-light"></i></a>
                                    </div>
                                    <div class="col">
                                        <a href="javascript:void(0)" class="delete-favorite-btn btn bg-danger text-light" data-book-id="<%= book.id %>" title="Favorilerinden Sil"><i class="bi bi-trash"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>   
                </div>                   
            <% }); %>
        <% } %>
    </div>
</main>
<script src="/assets/js/cardSearch.js"></script>
<script src="/assets/js/myfavorites.js"></script>